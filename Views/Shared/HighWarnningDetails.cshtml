    <script type="text/javascript">
        var g;
        $(function () {
            setGrids();
        });
        function setGrids() {
            g = $("#maingrid").ligerGrid({
                height: '90%',
                width: '99%',
                columns: [
                { display: '名称', name: 'Name' },
                { display: '型号', name: 'Mode' },
                { display: '品牌', name: 'Brand' },
                { display: '数量', name: 'Num' },
                { display: '价格', name: 'Price' },
                { display: '货架编号', name: 'PlaceNumber' },
                { display: '订货号', name: 'SeriesID' },
                 {
                     display: '状态', isAllowHide: false,
                     render: function (row) {
                         return "积压警报";
                     }
                 }
                ],
                url: "/Statistics/OverLoad",
                usePager: true,
                pageSize: 10,
                rownumbers: false,
                checkbox: false,
                toolbar: {
                    items: [
                    { text: '积压的备件清单', click: itemclickOut, icon: 'coffee', id: 'refreshDeviceOut' },
                    ]
                },
                onSelectRow: function (data, rowindex) {
                    showStorage(data.ID);
                },
            });
        }

        function itemclickOut(item) {
          
            }
        function showStorage(id) {
            var data = "deviceID=" + id;
            $.ajax({
                url: "/Statistics/Storage", async: true,
                data: data,
                type: "post",
                dataType: "json",
                error: function (data) {
                    $.ligerDialog.alert('系统错误!');
                },
                beforeSend: function () {
                    $.ligerDialog.waitting("正在处理中,请稍后...");
                },

                complete: function () {
                    $.ligerDialog.closeWaitting();
                },
                success: function (data) {
                    var ma = data.Max;
                    var mi = data.Min;
                    if (data.Max == 9999999999999) {
                        ma = "无数据";
                    }
                    if (data.Min == -1) {
                        mi = "无数据";
                    }

                    $.ligerDialog.alert('高储:' + ma + "<br/>" + "低储:" + mi);
                },

            });
        }
    </script>
